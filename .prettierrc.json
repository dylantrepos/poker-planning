{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "none",
  "arrowParens": "always",
  "plugins": ["prettier-plugin-sort-imports", "prettier-plugin-css-order"],
  "rules": {
    "prettier-plugin-sort-imports": "true",
    "sort-imports": [
      "style",
      {
        "ignoreCase": false,
        "ignoreDeclarationSort": false,
        "ignoreMemberSort": false,
        "memberSyntaxSortOrder": ["none", "all", "multiple", "single"],
        "caseSensitive": false
      }
    ]
  }
}
